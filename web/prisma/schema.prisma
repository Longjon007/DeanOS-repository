generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Subscriptions table - synced with Supabase migration 20240522000000_create_subscriptions.sql
// Note: userId references auth.users(id) in Supabase (enforced at database level)
model Subscription {
  id               String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId           String    @map("user_id") @db.Uuid
  stripeCustomerId String?   @map("stripe_customer_id")
  status           String?
  lastBilledAt     DateTime? @map("last_billed_at") @db.Timestamptz(6)
  createdAt        DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt        DateTime  @default(now()) @map("updated_at") @db.Timestamptz(6)

  @@map("subscriptions")
}

// Todos table - synced with Supabase migration 20240523000001_create_todos.sql
model Todo {
  id         BigInt   @id @default(autoincrement())
  userId     String   @map("user_id") @db.Uuid
  title      String?
  isComplete Boolean? @default(false) @map("is_complete")
  insertedAt DateTime @default(now()) @map("inserted_at") @db.Timestamptz(6)

  @@map("todos")
}
