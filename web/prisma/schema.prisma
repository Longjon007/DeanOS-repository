generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Subscriptions table - synced with Supabase migration 20240522000000_create_subscriptions.sql
// Note: userId references auth.users(id) in Supabase (enforced at database level)
model Subscription {
  id               String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId           String    @map("user_id") @db.Uuid
  stripeCustomerId String?   @map("stripe_customer_id")
  status           String?
  lastBilledAt     DateTime? @map("last_billed_at") @db.Timestamptz(6)
  createdAt        DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt        DateTime  @default(now()) @map("updated_at") @db.Timestamptz(6)

  @@map("subscriptions")
}

// DeanOS Core Models
model SystemLog {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  timestamp DateTime @default(now()) @db.Timestamptz(6)  // Event occurrence time
  level     String   // INFO, WARN, ERROR
  component String   // Which part of DeanOS
  message   String
  metadata  Json?
  createdAt DateTime @default(now()) @db.Timestamptz(6)  // Record creation time
  
  @@index([timestamp])
  @@index([level])
  @@index([component])
}

model HealthCheck {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  timestamp   DateTime @default(now()) @db.Timestamptz(6)  // Check execution time
  passed      Int
  failed      Int
  warnings    Int
  percentage  Float
  details     Json
  createdAt   DateTime @default(now()) @db.Timestamptz(6)  // Record creation time
  
  @@index([timestamp])
}

model Configuration {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  key       String   @unique
  value     String
  category  String
  updatedAt DateTime @updatedAt @db.Timestamptz(6)
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  
  @@index([category])
}
